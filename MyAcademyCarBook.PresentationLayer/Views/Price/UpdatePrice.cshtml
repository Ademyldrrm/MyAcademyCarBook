@model Price
@{
    ViewData["Title"] = "UpdatePrice";
    Layout = "~/Views/_AdminLayout/Index.cshtml";
}

<h1>Ödeme Fiyat Güncelleme Sayfası</h1>

<form method="post">
    <input  type="hidden" asp-for="PriceID"/>
    <label>Araba</label>
    @Html.DropDownListFor(x => x.CarID, (List<SelectListItem>)ViewBag.v, new { @class = "form-control" })
    <br />
    <label>Ödeme Planı Giriniz</label>
    <input type="text" asp-for="PriceType" class="form-control" style="border:1px solid#2222" />
    <br />
    <label>Ödeme Planı Giriniz</label>
    <input type="text" asp-for="PriceValue" class="form-control" style="border:1px solid#2222" />
    <br />
    <button class="btn btn-primary"> Ödeme Planı Ekleyiniz</button>
</form>