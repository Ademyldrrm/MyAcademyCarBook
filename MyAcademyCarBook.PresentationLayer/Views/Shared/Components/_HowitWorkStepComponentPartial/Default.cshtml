@model List<HowitWorkStep>
@{
    int i = 1;
}
<div class="container site-section mb-5">
    <div class="row justify-content-center text-center">
        <div class="col-7 text-center mb-5">
            <h2>Sistem Nasıl Çalışır</h2>
            <p>Hemen  birkaç adımda istediğin aracı lokasyondan kolayca kirala!</p>
        </div>
    </div>
    <div class="how-it-works d-flex">
        @foreach (var item in Model)
        {

            <div class="step">
                <span class="number"><span>0<span>@i</span></span></span>
                <span class="caption">@item.HowitWorkStepTitle</span>
            </div>
            i++;
        }



    </div>
</div>