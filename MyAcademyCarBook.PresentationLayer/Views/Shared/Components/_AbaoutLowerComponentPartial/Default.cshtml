@model List<MyAcademyCarBook.EntityLayer.Concrete.About>

<div class="site-section">
    <div class="container">
        @foreach (var item in Model)
        {
           <div class="row">
            <div class="col-lg-6 mb-5 mb-lg-0">
                <img src="@item.Image2" alt="Image" class="img-fluid">
            </div>
            <div class="col-lg-4 ml-auto">
                <h2>@item.Title2</h2>
                <p>@item.Description2</p>
            </div>
        </div> 
        }
        
    </div>
</div>
