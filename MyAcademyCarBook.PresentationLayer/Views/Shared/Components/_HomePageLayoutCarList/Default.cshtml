@model MyAcademyCarBook.EntityLayer.Concrete.Car

<div class="ftco-blocks-cover-1">
    <div class="ftco-cover-1 overlay" style="background-image: url('/carrent-master/images/hero_1.jpg')">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-5">
                    
                        <h3 style="color:whitesmoke">İstediğin Aracı Bul</h3>
                        <form method="post" asp-action="RentCar" asp-controller="Car" style="border: 1px solid #2222">
                        <h4 style="color:whitesmoke">Kategori</h4>
                                    <select asp-items="ViewBag.c" name="kategori" class="form-control" style="border: 1px solid #2222"></select>
                                <br />
                        <h4 style="color:whitesmoke">Marka</h4>
                                    <select asp-items="ViewBag.b" name="marka" class="form-control" style="border: 1px solid #2222"></select>
                               <br />
                        <h4 style="color:whitesmoke">Model</h4>
                                    <input type="text" class="form-control" name="model" style="border: 1px solid #2222" />
                               <br />
                        <h4 style="color:whitesmoke">vites Tipi</h4>
                                    <input type="text" class="form-control" name="gearType" style="border: 1px solid #2222" />
<br />
                                <button type="submit" class="btn btn-info">Hemen Bul</button>
                            
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
