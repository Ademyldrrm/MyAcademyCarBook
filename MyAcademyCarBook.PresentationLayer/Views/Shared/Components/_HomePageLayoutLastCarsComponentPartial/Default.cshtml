@model List<MyAcademyCarBook.EntityLayer.Concrete.Car>

<div class="site-section bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <h3>Son 5 Aracımız</h3>
                <p class="mb-4">En Yeni 5 Aracımız Sizlere Sunmaktan Mutluluk Duyuyoruz </p>
                <p>
                    <a href="#" class="btn btn-primary custom-prev">Previous</a>
                    <span class="mx-2">/</span>
                    <a href="#" class="btn btn-primary custom-next">Next</a>
                </p>
            </div>
            <div class="col-lg-9">

                <div class="nonloop-block-13 owl-carousel">
                    @foreach (var item in Model)
                    {
                          <div class="item-1">
                            <a href="#"><img src="@item.ImageUrl" alt="Image" class="img-fluid" style="height:210px; width:350px;"></a>
                        <div class="item-1-contents">
                            <div class="text-center">
                                <h3><a href="#">@item.Brand.BrandName @item.Model</a></h3>
                                <div class="rating">
                                    <span class="icon-star text-warning"></span>
                                    <span class="icon-star text-warning"></span>
                                    <span class="icon-star text-warning"></span>
                                    <span class="icon-star text-warning"></span>
                                    <span class="icon-star text-warning"></span>
                                </div>
                                <div class="rent-price">
                                        @foreach (var price in item.Prices)
                                        {
                                            <span>@price.PriceType:</span>
                                            <span class="spec">@price.PriceValue₺ </span>
                                        }
                                    </div>
                            </div>
                            <ul class="specs">
                                <li>
                                    <span>Kategori</span>
                                    <span class="spec">@item.CarCategory.CategoryName</span>
                                </li>
                                <li>
                                    <span>Km</span>
                                    <span class="spec">@item.Km</span>
                                </li>
                                <li>
                                    <span>Vites Tipi</span>
                                    <span class="spec">@item.GearType</span>
                                </li>
                                <li>
                                    <span>Model Yılı</span>
                                    <span class="spec">@item.Year</span>
                                </li>
                            </ul>
                            <div class="d-flex action">
                                <a href="/Car/CarList" class="btn btn-primary">Hemen Kirala</a>
                            </div>
                        </div>
                    </div>
                    }

                </div>

            </div>
        </div>
    </div>
</div>