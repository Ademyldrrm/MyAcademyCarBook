@model List<MyAcademyCarBook.EntityLayer.Concrete.Team>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}


@await Component.InvokeAsync("_AboutTopComponentPartial")

<div class="site-section bg-light">
    <div class="container">
        <div class="row justify-content-center text-center mb-5 section-2-title">
            <div class="col-md-6">
                <span class="text-primary">Takım Arkadaşlarımız</span>
                <h2 class="mb-4">Onlarla Tanışın</h2>
                <p>Organizasyonumuzun kalbine hoş geldiniz - ortak bir tutku ve mükemmeliyete olan ortak bir taahhüt tarafından birleştirilen çeşitli ve yetenekli bir grup birey. Takımımız, yolculuğumuzu tanımlayan yenilik ve başarıların arkasındaki itici güçtür.</p>
            </div>
        </div>
        <div class="row align-items-stretch">

            @foreach (var item in Model)
            {
                  <div class="col-lg-4 col-md-6 mb-5">
                <div class="post-entry-1 h-100 person-1">

                    <img src="@item.ImageUrl" alt="Image"
                         class="img-fluid">

                    <div class="post-entry-1-contents">
                        <span class="meta">@item.TeamTitle</span>
                        <h2>@item.TeamNameSurname</h2>
                        <p>@item.Description</p>
                    </div>
                </div>
            </div>
          
            }
          


        </div>
    </div>
</div>


@await Component.InvokeAsync("_AbaoutLowerComponentPartial")
@await Component.InvokeAsync("_HowitWorkStepComponentPartial")
